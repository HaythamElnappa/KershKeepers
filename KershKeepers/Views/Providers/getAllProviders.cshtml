<div class="container">

    <h2>Index</h2>

    @*<p>
        @Html.ActionLink("Create New", "Create")
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>*@

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkEndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActivated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Image)*@
                    <img src="@Url.Content(item.Image)" style="width:80px;height:50px" class="rounded-circle" alt="Circular Image">

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkStartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkEndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActivated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ProviderId }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Providers" }, htmlAttributes: new { @class = "btn btn-primary" }) |*@
                   @* @Ajax.ActionLink("Details", "Details", new { id = item.ProviderId }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Providers" }, htmlAttributes: new { @class = "btn btn-primary" }) |*@
                    @Ajax.ActionLink(!item.IsDeleted?"Delete":"UnDelete", "Delete", new { id = item.ProviderId }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "Providers" }, htmlAttributes: new { @class = "btn btn-danger" })
                   </td>
            </tr>
        }

    </table>

</div>
